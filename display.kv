<CheckLabel@Label>:
    halign: 'left'
    valign: 'middle'
    text_size: self.size

<Button>:
    background_color: (1.0, 0.6, 0.4, 1.0)

<CheckBox>:
    color: (1, 1, 1, 1.0)
    background_color: (1.0, 1.0, 1.0, 1.0)
    canvas.before:
        Color:
            rgb: 1,1,0
        Rectangle:
            pos:self.center_x-9, self.center_y-9
            size:[18,18]
        Color:
            rgb: 0.7,0.5,0.1
        Rectangle:
            pos:self.center_x-7, self.center_y-7
            size:[14,14]
    size_hint:(.1,1)


<Container>
    ti_size_x: ti_size_x
    ti_size_y: ti_size_y
    ti_devices_number_x: ti_devices_number_x
    ti_devices_number_y: ti_devices_number_y
    ti_device_name: ti_device_name
    cb_chart: cb_chart
    cb_sd_chmt: cb_sd_chmt
    cb_sd_dispenser: cb_sd_dispenser
    cb_split_size: cb_split_size
    bl_coils: bl_coils
    ll_out: ll_out
    fl_main: fl_main

    canvas.before:
        Color:
            rgba: (155 / 255, 86 / 255, 3 / 255, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        id: fl_main
        BoxLayout:
            spacing: 20
            orientation:'horizontal'
            # ------------------------------ Coils ---------------------------------------
            BoxLayout:
                size_hint:(1.4,1)
                orientation:'vertical'
                padding: [5,10,5,10]
                Label:
                    text:'Катушки'
                    size_hint:(1,0.12)
                BoxLayout:
                    id: bl_coils
                    size_hint:(1,1.3)
                BoxLayout:
                    orientation:'vertical'
                    size_hint:(1,0.3)
                    Label:
                        text:'SOD80_S - диод'
                    Label:
                        text:'SOT-23 - BAS40-06'
                    Label:
                        text:'DB-1S - DB107S'
                    Label:
                        text:'SM-6 - MOC3063'
                    Label:
                        text:'SO8 - PIC12F675'
            # ------------------------------ Interface ---------------------------------------
            BoxLayout:
                size_hint:(1,1)
                orientation:'vertical'
                padding: 20
                spacing: 20
                BoxLayout:
                    size_hint:(1,.8)
                    orientation:'vertical'
                BoxLayout:
                    orientation:'vertical'
                    size_hint:(1,.8)
                    Label:
                        text:'Загрузка файла координат из:'
                    BoxLayout:
                        orientation:'horizontal'
                        Button:
                            id:bInputPcad
                            text:'PCAD'
                            on_release:
                                root.input_pcad()
                        Button:
                            id:bInputSaved
                            text:'Существующий Input'
                            on_release:
                                root.input_saved()
                    Button:
                        id:bCorrectCoords
                        text:'Корректировка координат PCAD (файл *.csv)'
                        on_release:
                            root.correct_coords()
                BoxLayout:
                    orientation:'horizontal'
                    size_hint:(1,0.3)
                    Label:
                        text:'Название'
                        size_hint:(.5,1)
                    TextInput:
                        id: ti_device_name
                        hint_text:'name'
                BoxLayout:
                    size_hint:(1,1)
                    orientation:'horizontal'
                    BoxLayout:
                        size_hint:(1,0.7)
                        orientation:'vertical'
                        Label:
                            text:'Размеры'
                        BoxLayout:
                            orientation:'horizontal'
                            Label:
                                text:'x'
                                size_hint:(.2,1)
                                background_color: 0.1, 0.5, 0.6, 1
                            TextInput:
                                id: ti_size_x
                                hint_text:'1'
                        BoxLayout:
                            orientation:'horizontal'
                            Label:
                                text:'y'
                                size_hint:(.2,1)
                            TextInput:
                                id: ti_size_y
                                hint_text:'1'
                    BoxLayout:
                        size_hint:(1,0.7)
                        orientation:'vertical'
                        Label:
                            text:'Количество'
                        BoxLayout:
                            orientation:'horizontal'
                            Label:
                                text:'x'
                                size_hint:(.2,1)
                            TextInput:
                                id: ti_devices_number_x
                                hint_text:'1'
                        BoxLayout:
                            orientation:'horizontal'
                            Label:
                                text:'y'
                                size_hint:(.2,1)
                            TextInput:
                                id: ti_devices_number_y
                                hint_text:'1'
                BoxLayout:
                    size_hint:(1,0.6)
                    orientation:'vertical'
                    BoxLayout:
                        orientation:'horizontal'
                        CheckBox:
                            id:cb_chart
                        CheckLabel:
                            text: "График"
                    BoxLayout:
                        orientation:'horizontal'
                        CheckBox:
                            id:cb_sd_chmt
                            on_active:
                                cb_sd_dispenser.active = False
                        CheckLabel:
                            text: "Копировать на SD карту CHMT"
                    BoxLayout:
                        orientation:'horizontal'
                        CheckBox:
                            id:cb_sd_dispenser
                            on_active:
                                cb_sd_chmt.active = False
                        CheckLabel:
                            text: "Копировать на SD карту Дозатор"
                    BoxLayout:
                        orientation:'horizontal'
                        CheckBox:
                            id:cb_split_size
                            color:.294, .761, .623
                            size_hint:(.1,1)
                        CheckLabel:
                            text: "Разбить файлы по размеру компонентов"
                BoxLayout:
                    size_hint:(1,0.6)
                    orientation:'horizontal'
                    Button:
                        size_hint:(.3,0.6)
                        text:'Расчёт'
                        on_release:
                            root.calculate_pcad()
            # ------------------------------ Output ---------------------------------------
            BoxLayout:
                spacing: 5
                size_hint:(0.5,1)
                orientation:'vertical'
                ScrollView:
                    Label:
                        id: ll_out
                        text:'-----------------------\nВывод:\n-----------------------\n\n'
                        size_hint:(1,1)
                        size_hint: None, None     # <<<<<<<<<<
                        size: self.texture_size   # <<<<<<<<<<
